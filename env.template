# ============================================================
# HUBBO Backend Environment Configuration
# ============================================================
# Copy this file to .env and update with your values

# ============================================================
# APPLICATION
# ============================================================
APP_NAME=HUBBO
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ============================================================
# DATABASE
# ============================================================
DB_USER=hubbo_user
DB_PASSWORD=change-this-secure-password
DB_NAME=hubbo
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# ============================================================
# SECURITY (CRITICAL - CHANGE THESE!)
# ============================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-64-CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# CORS (Add your frontend domains)
# ============================================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your-smtp-password
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=HUBBO Platform
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# ============================================================
# AI CONFIGURATION (Optional)
# ============================================================
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
EMBEDDING_MODEL=text-embedding-ada-002

# ============================================================
# FILE STORAGE
# ============================================================
UPLOAD_DIR=/app/data/uploads
VECTOR_STORE_PATH=/app/data/vectorstore
MAX_UPLOAD_SIZE=10485760

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================================
# DOCKER CONFIGURATION
# ============================================================
BACKEND_PORT=8000

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_STREAMING=true
ENABLE_AGENT=true
ENABLE_KNOWLEDGE_BASE=true


